@model EDB.WebAPI.Model.AuthorsModel.AuthorsAddedModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Ad:</label>
        <input type="text" name="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="SurName">Soyad:</label>
        <input type="text" name="SurName" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="About">Hakkında:</label>
        <input type="text" name="About" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Pseudonym">Mahlası:</label>
        <input type="text" name="Pseudonym" class="form-control" />
    </div>
    <div class="form-group row">
        <label>Kullanıcı Görseli</label>
        <input type="file" Name="ImagePath" />

    </div>
    <div class="form-group">
        <label for="DateOfBirth">Doğum Tarihi:</label>
        <input type="date" name="DateOfBirth" class="form-control" />
    </div>
    <div class="form-group">
        <label for="DateOfDeath">Ölüm Tarihi:</label>
        <input type="date" name="DateOfDeath" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>
